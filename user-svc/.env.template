# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Connection URL for this service's own database.
# Format: postgresql+asyncpg://user:password@host:port/database_name
# ----------------------------------------------------------------------------
DATABASE_URL=""

# ============================================================================
# AUTHENTICATION & TOKEN SECRETS
# ============================================================================
# These keys are used to cryptographically sign and verify different types
# of tokens in the authentication system.
# Each secret should be unique and securely generated with:
#     openssl rand -base64 32
#
# Never reuse the same secret for multiple token types.
# ----------------------------------------------------------------------------
# Secret for JWT access tokens (used by API Gateway)
JWT_SECRET="your_access_jwt_secret_here"

# Secret for signing email verification tokens
VERIFY_TOKEN_SECRET="your_verify_token_secret_here"

# Secret for signing password reset tokens
RESET_TOKEN_SECRET="your_reset_token_secret_here"

# Token expiration times (in seconds)
VERIFY_TOKEN_EXPIRE_SECONDS=3600
RESET_TOKEN_EXPIRE_SECONDS=3600

# ============================================================================
# USER SERVICE CONFIGURATION
# ============================================================================
# Default role assigned to new users upon registration.
# Typically references a role ID in the roles table.
# ----------------------------------------------------------------------------
DEFAULT_ROLE_ID=1

# Base URL for constructing user-facing verification links.
# The service will append the token to this URL when sending verification emails.
# Example: http://localhost:8000/verify?token=xxxx
# ----------------------------------------------------------------------------
VERIFY_EMAIL_BASE="http://localhost:8000/verify"

# Base URL for constructing password reset links.
# The service will append the reset token to this URL when sending password reset emails.
# Example: http://localhost:8000/reset-password?token=xxxx
# ----------------------------------------------------------------------------
PASSWORD_RESET_BASE="http://localhost:8000/reset-password"

# ============================================================================
# EMAIL (SMTP) CONFIGURATION
# ============================================================================
# Mail sender identity and SMTP settings
# ----------------------------------------------------------------------------
MAIL_FROM_ADDRESS="no-reply@example.com"
MAIL_FROM_NAME="PeerPrep"

# SMTP host and credentials
MAIL_HOST="smtp.example.com"
MAIL_PORT=587
MAIL_USERNAME="your_email@example.com"
MAIL_PASSWORD="your_email_app_password"

MAIL_STARTTLS=true
MAIL_SSL_TLS=false

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Application log settings.
# ----------------------------------------------------------------------------
LOG_NAME="user-svc"
LOG_LEVEL="INFO"        # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR="./logs"
