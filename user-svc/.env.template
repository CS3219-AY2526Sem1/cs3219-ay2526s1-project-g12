# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Connection URL for this service's own database.
# Format: postgresql+asyncpg://user:password@host:port/database_name
# ----------------------------------------------------------------------------
DATABASE_URL=""

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Redis connection string (used for caching).
# Format: redis://user:password@host:port/db_number
# ----------------------------------------------------------------------------
REDIS_URL="redis://user:pass@localhost:6379/1"

# ============================================================================
# AUTHENTICATION & TOKEN SECRETS
# ============================================================================
# These keys are used to cryptographically sign and verify different types
# of tokens in the authentication system.
# Each secret should be unique and securely generated with:
#     openssl rand -base64 32
#
# Never reuse the same secret for multiple token types.
# ----------------------------------------------------------------------------
# Secret for JWT access tokens (used by API Gateway)
JWT_SECRET="your_access_jwt_secret_here"

# Secret for signing email verification tokens
VERIFY_TOKEN_SECRET="your_verify_token_secret_here"

# Secret for signing password reset tokens
RESET_TOKEN_SECRET="your_reset_token_secret_here"

# Token expiration times (in seconds)
VERIFY_TOKEN_EXPIRE_SECONDS=3600
RESET_TOKEN_EXPIRE_SECONDS=3600

# ============================================================================
# USER SERVICE CONFIGURATION
# ============================================================================
# Default role assigned to new users upon registration.
# Typically references a role ID in the roles table.
# ----------------------------------------------------------------------------
DEFAULT_ROLE_ID=1

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Application log settings.
# ----------------------------------------------------------------------------
LOG_NAME="user-svc"
LOG_LEVEL="INFO"        # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR="./logs"
