# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
# Connection URL for Redis cache.
# Used for storing service registry data, session metadata, and temporary tokens.
# Format: redis[s]://[[username][:password]@][host][:port][/db-number]
# ----------------------------------------------------------------------------
REDIS_URL="redis://localhost:6379"


# ============================================================================
# COOKIE / TOKEN CONFIGURATION
# ============================================================================
# Session token lifetime and cookie expiration settings.
# ----------------------------------------------------------------------------
# Maximum age (in seconds) for session cookies stored in the client browser.
# Example: 7200 seconds = 2 hours
DEFAULT_COOKIE_MAX_AGE=7200

# Expiration time (in hours) for issued access tokens.
TOKEN_EXPIRE_HOURS=2


# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================
# General service-level constants and known service endpoints.
# ----------------------------------------------------------------------------
# Base URL of the front-end application, used for redirects and CORS.
FRONT_END_URL="http://localhost:5173"

# Login route path exposed by the User Service.
USER_SERVICE_LOGIN_PATH="/us/auth/login"


# ============================================================================
# SERVICE REGISTRY CONFIGURATION
# ============================================================================
# Heartbeat and service discovery parameters.
# ----------------------------------------------------------------------------
# Time-to-live (TTL) in seconds for each registered service instance.
# Each microservice must periodically refresh its registration within this interval,
# or the API Gateway will consider the instance dead and remove it.
HEARTBEAT_TTL=300
# Time-to-live (TTL) in seconds for the round-robin counter used in load balancing.
RR_TTL=3600


# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
# Application log settings for the API Gateway.
# ----------------------------------------------------------------------------
LOG_NAME="api-gateway"
LOG_LEVEL="INFO"        # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_DIR="./logs"
